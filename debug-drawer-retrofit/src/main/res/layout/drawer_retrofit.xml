<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:paddingStart="8dp"
    tools:ignore="RtlSymmetry"
    >

  <TextView
      android:layout_gravity="start|center_vertical"
      android:text="@string/drawer_retrofitEndpoint"
      style="@style/Widget.DebugDrawer.RowTitle"
      />

  <Spinner
      android:id="@+id/drawer_retrofitEndpoint"
      android:layout_width="0dp"
      android:layout_gravity="start|center_vertical|fill_horizontal"
      />

  <TextView
      android:layout_gravity="start|center_vertical"
      android:text="@string/drawer_retrofitDelay"
      style="@style/Widget.DebugDrawer.RowTitle"
      />

  <Spinner
      android:id="@+id/drawer_retrofitDelay"
      android:layout_width="0dp"
      android:layout_gravity="start|center_vertical|fill_horizontal"
      />

  <TextView
      android:layout_gravity="start|center_vertical"
      android:text="@string/drawer_retrofitVariance"
      style="@style/Widget.DebugDrawer.RowTitle"
      />

  <Spinner
      android:id="@+id/drawer_retrofitVariance"
      android:layout_width="0dp"
      android:layout_gravity="start|center_vertical|fill_horizontal"
      />

  <TextView
      android:layout_gravity="start|center_vertical"
      android:text="@string/drawer_retrofitFailureRate"
      style="@style/Widget.DebugDrawer.RowTitle"
      />

  <Spinner
      android:id="@+id/drawer_retrofitFailureRate"
      android:layout_width="0dp"
      android:layout_gravity="start|center_vertical|fill_horizontal"
      />

  <TextView
      android:layout_gravity="start|center_vertical"
      android:text="@string/drawer_retrofitErrorRate"
      style="@style/Widget.DebugDrawer.RowTitle"
      />

  <Spinner
      android:id="@+id/drawer_retrofitErrorRate"
      android:layout_width="0dp"
      android:layout_gravity="start|center_vertical|fill_horizontal"
      />

  <TextView
      android:layout_gravity="start|center_vertical"
      android:text="@string/drawer_retrofitErrorCode"
      style="@style/Widget.DebugDrawer.RowTitle"
      />

  <Spinner
      android:id="@+id/drawer_retrofitErrorCode"
      android:layout_width="0dp"
      android:layout_gravity="start|center_vertical|fill_horizontal"
      />

</GridLayout>
