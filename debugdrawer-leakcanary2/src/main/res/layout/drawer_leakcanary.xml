<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    >

  <TextView
      android:layout_marginStart="8dp"
      android:layout_gravity="start|center_vertical"
      android:text="@string/drawer_leakcanaryToggleLabel"
      style="@style/Widget.DebugDrawer.RowTitle"
      />

  <Switch
      android:id="@+id/drawer_leakcanaryToggle"
      android:layout_gravity="start|center_vertical|fill_horizontal"
      />

  <Button
      android:id="@+id/drawer_leakcanaryViewButton"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="fill_horizontal"
      android:text="@string/drawer_leakcanaryButton"
      />

</GridLayout>
